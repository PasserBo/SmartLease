{
  "manifest_version": 3,
  "name": "SmartLease",
  "version": "1.0",
  "description": "自动计算租房距离，隐藏费用提醒，安全性分析的 Chrome 插件。",
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://*/*", "http://*/*"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  }
}